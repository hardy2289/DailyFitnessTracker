<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ForgotPasswordPage">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/lcr"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:textSize="33sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forgot Password"
        android:id="@+id/textView6"
        android:padding="7dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:padding="7dp"
        android:textSize="25sp"
        android:ems="10"
        android:textStyle="normal"
        android:id="@+id/emailAddressForgotPassword"
    android:background="@android:drawable/screen_background_light_transparent"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:textColorHint="@android:color/background_dark"
    android:password="false"
    android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Request"
        android:textSize="25sp"
        android:id="@+id/btnRequest"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:padding="5dip"
        android:textStyle="normal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/emailAddressForgotPassword"
        android:layout_alignStart="@+id/emailAddressForgotPassword" />

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="Cancel"

        android:id="@+id/btnCancel"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:padding="5dip"
        android:textStyle="normal"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/emailAddressForgotPassword"
        android:layout_alignEnd="@+id/emailAddressForgotPassword" />

</RelativeLayout>
