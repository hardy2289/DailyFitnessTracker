<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ganesha.dailyfitnesstracker.Settings">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/lcr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

   <TextView

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Personal Details"
       android:textStyle="bold"
       android:textSize="30dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"


       />


    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name:"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/txtFirstNameSettings"
        android:layout_marginTop="90dp"
        android:textColorHint="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/txtLastNameSettings"
        android:layout_marginTop="8dp"
        android:textColorHint="@android:color/background_dark"
        android:layout_below="@+id/txtFirstNameSettings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/txtEmailAddressSettings"
        android:textColorHint="@android:color/background_dark"
        android:layout_below="@+id/txtLastNameSettings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Date Of Birth"
        android:ems="10"
        android:padding="2dp"
        android:textSize="23sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/editText2Settings"
        android:textColorHint="@android:color/background_dark"
        android:layout_below="@+id/txtEmailAddressSettings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Gender"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/txtGenderSettings"
        android:textColorHint="@android:color/background_dark"
        android:layout_below="@+id/editText2Settings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Age"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/textAgeSettings"
        android:textColorHint="@android:color/background_dark"
        android:layout_below="@+id/txtGenderSettings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Height"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/txtHeightSettings"
        android:textColorHint="@android:color/background_dark"
        android:clickable="false"
        android:layout_below="@+id/textAgeSettings"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Update Details"
        android:textSize="25sp"

        android:id="@+id/btnUpadateStatus"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:padding="5dip"
        android:textStyle="normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>



    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Weight"
        android:ems="10"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:background="@android:drawable/screen_background_light_transparent"
        android:id="@+id/txtWeightSettings"
        android:textColorHint="@android:color/background_dark"

        android:layout_below="@+id/txtHeightSettings"
        android:layout_alignStart="@+id/txtHeightSettings"
        android:layout_marginTop="8dp"/>




</RelativeLayout>
