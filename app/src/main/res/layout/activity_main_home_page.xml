<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ganesha.dailyfitnesstracker.MainHomePage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/lcr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start New Activity"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:id="@+id/btnStartNewActivity"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:onClick="buttonOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnSettings"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:textSize="28sp"        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:id="@+id/btnSettings"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/btnHistory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="History"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:id="@+id/btnHistory"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/btnStartNewActivity"
        android:layout_alignStart="@+id/btnSettings"
        android:layout_marginTop="25dp" />

    <ListView
        android:id="@+id/song_list"
        android:layout_width="fill_parent"
        android:layout_height="214dp"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:layout_below="@+id/btnSettings"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true">
    </ListView>

</RelativeLayout>
